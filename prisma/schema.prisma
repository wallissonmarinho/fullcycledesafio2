generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model Asset {
  id     String  @id @map("_id")
  symbol String
  Order  Order[]
}

model Order {
  id       String      @id @default(auto()) @map("_id") @db.ObjectId
  price    Float
  status   OrderStatus
  asset_id String     
  asset    Asset       @relation(fields: [asset_id], references: [id])
}

enum OrderStatus {
  Open
  Pending
  Closed
}
